<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/minigames_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minigamestitle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorRed"
        android:textSize="120px"
        android:textStyle="bold|italic"/>
    <ImageView
        android:id="@+id/minigames_games"
        android:layout_width="800px"
        android:layout_height="900px"
        android:src="@drawable/minigames1"
        android:layout_marginTop="50px"
        />
    <TextView
        android:id="@+id/minigames_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minigames_title"
        android:text="What is the capital of France ?"
        android:layout_marginLeft="130px"
        android:layout_marginTop="140px"
        android:textSize="37px"/>
    <Button
        android:id="@+id/minigames_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/minigames_games"
        android:layout_centerHorizontal="true"
                />
</RelativeLayout>