<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signuppage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signuplogo"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90px"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/signupemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuplogo"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/signupemail"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signupemailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/signupemail"
        android:layout_marginLeft="120px"
        android:layout_toRightOf="@id/signupemail"
        android:ems="10"
        android:hint="@string/signupemail"
        android:inputType="text"
        android:maxLength="20"
        android:textSize="50px" />

    <TextView
        android:id="@+id/signupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupemail"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/signupname"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signupnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/signupname"
        android:layout_margin="20px"
        android:layout_toRightOf="@id/signupname"
        android:ems="10"
        android:hint="@string/signupname"
        android:inputType="text"
        android:maxLength="20"
        android:textSize="50px" />

    <TextView
        android:id="@+id/signupmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupname"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/signupmob"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signupmobtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/signupmobile"
        android:layout_margin="10px"
        android:layout_toRightOf="@id/signupmobile"
        android:ems="10"
        android:hint="@string/signupmob"
        android:inputType="text"
        android:maxLength="20"
        android:textSize="50px" />
    <TextView
        android:id="@+id/signuplogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupmobile"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/signuplogin"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signuplogintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signuplogin"
        android:layout_alignBottom="@+id/signuplogin"
        android:layout_alignLeft="@+id/signupmobtext"
        android:layout_alignStart="@+id/signupmobtext"
        android:ems="10"
        android:hint="@string/signuplogin"
        android:inputType="text"
        android:maxLength="20"
        android:textSize="50px" />
    <TextView
        android:id="@+id/signuppassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuplogin"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/signuppass"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signuppasstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/signuppassword"
        android:layout_alignLeft="@id/signupnametext"
        android:layout_alignStart="@id/signupnametext"
        android:layout_margin="10px"
        android:layout_toRightOf="@id/signuppassword"
        android:ems="10"
        android:hint="@string/signuppass"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textSize="50px" />

    <TextView
        android:id="@+id/signupconfpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuppassword"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/signupconfpass"
        android:textSize="50px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signupconfpasstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/signupconfpass"
        android:layout_alignLeft="@id/signupnametext"
        android:layout_alignStart="@id/signupnametext"
        android:layout_margin="10px"
        android:layout_toRightOf="@id/signupconfpass"
        android:ems="10"
        android:hint="@string/signupconfpass"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textSize="50px" />

    <Button
        android:id="@+id/signupsubmitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupconfpass"
        android:layout_centerHorizontal="true"
        android:layout_margin="90px"
        android:text="@string/forgotsubmitbutton"
        android:textSize="50px" />
</RelativeLayout>