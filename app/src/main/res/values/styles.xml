    <!-- Teal App Theme -->
    <style name="BaseTheme.Teal" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>

        <item name="colorControlNormal">@color/material_teal_500</item>
        <item name="colorControlActivated">@color/material_teal_500</item>
        <item name="colorControlHighlight">@color/selector_teal_pressed</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Teal</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Teal</item>
    </style>

    <style name="AppTheme.Teal" parent="BaseTheme.Teal">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/draw_checkbox</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/draw_rounded</item>
    </style>

    <!-- Default Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <!-- Teal Dialog Theme -->
    <style name="AppTheme.Dialog.Teal">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <!-- Teal Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Teal">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_teal_a700</item>
    </style>

    <!-- Light App Bar Theme -->
    <style name="AppTheme.AppBar.Light" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    </style>

    <!-- Dark App Bar Theme -->
    <style name="AppTheme.AppBar.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <!-- Light Overlay Theme -->
    <style name="AppTheme.Overlay.Light" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

    <!-- Dark Overlay Theme -->
    <style name="AppTheme.Overlay.Dark" parent="@style/ThemeOverlay.AppCompat.Dark">
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
    </style>

    <style name="ButtonStyle.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Colored" parent="@style/Widget.AppCompat.Button.Colored">
    </style>

    <style name="ButtonStyle.Colored.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
    </style>

    <style name="ButtonStyle.Borderless.ColoredText" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
    </style>

    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    </style>

    <style name="SwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
    </style>

