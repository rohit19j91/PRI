    <!-- Text Styles -->
    <style name="TextStyle" parent="@style/TextAppearance.AppCompat">
    </style>

    <style name="TextStyle.Title" parent="@style/TextAppearance.AppCompat.Title">
    </style>

    <style name="TextStyle.Body1" parent="@style/TextAppearance.AppCompat.Body1">
    </style>

    <style name="TextStyle.Body2" parent="@style/TextAppearance.AppCompat.Body2">
    </style>

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
